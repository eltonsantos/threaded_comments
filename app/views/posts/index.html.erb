<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.message %></td>
        <td>
          <%= link_to post do %>
            <i class="edit icon"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_post_path(post) do %>
            <i class="edit icon"></i>
          <% end %>
        </td>
        <td>
          <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="edit icon"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'ui button' %>
